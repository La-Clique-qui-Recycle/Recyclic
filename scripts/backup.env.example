# Configuration pour le script de sauvegarde automatisée
# Copier ce fichier vers backup.env et remplir les valeurs

# Configuration PostgreSQL (héritée de .env principal)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=recyclic
POSTGRES_USER=recyclic
POSTGRES_PASSWORD=your_postgres_password

# Configuration stockage externe (SFTP/SCP)
BACKUP_REMOTE_HOST=your-backup-server.com
BACKUP_REMOTE_USER=backup_user
BACKUP_REMOTE_PATH=/backups/recyclic
BACKUP_RETENTION_DAYS=7

# Notifications (optionnelles)
NOTIFICATION_EMAIL=admin@example.com
NOTIFICATION_TELEGRAM_TOKEN=your_telegram_bot_token
NOTIFICATION_TELEGRAM_CHAT_ID=your_telegram_chat_id

# Configuration avancée
BACKUP_COMPRESSION_LEVEL=9
BACKUP_TIMEOUT_SECONDS=3600


