# This file is an example. Copy it to .env and fill in the values.

# For Docker Compose
POSTGRES_PASSWORD=your_postgres_password
SECRET_KEY=your-super-secret-key-that-is-long-and-random
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
ADMIN_TELEGRAM_IDS=your_admin_telegram_id,another_admin_id
TELEGRAM_BOT_URL=http://bot:8001
# Frontend URL (DEV par dÃ©faut)
FRONTEND_URL=http://localhost:4444
# Exemple tunnel (optionnel):
# FRONTEND_URL=https://dev-your-tunnel-url.example

# Feature flag: activer les boutons inline (HTTPS requis). false => fallback cliquable
ENABLE_INLINE_BUTTONS=false

# Public HTTPS URL for dev (from cloudflared/ngrok)
# Example after starting tunnel: https://your-subdomain.trycloudflare.com
FRONTEND_URL=https://replace-with-your-dev-public-https-url

# Frontend (Vite)
# Base URL de l'API consommée par le frontend
VITE_API_URL=/api

# For local testing (e.g., pytest)
# These are used when running the app outside of Docker.
DATABASE_URL=postgresql://recyclic:${POSTGRES_PASSWORD}@localhost:5432/recyclic
REDIS_URL=redis://localhost:6379

# Common
ENVIRONMENT=development

# Email Service (Brevo)
BREVO_API_KEY=
# Leave empty in dev to skip signature check; set in prod when webhook is configured
BREVO_WEBHOOK_SECRET=
EMAIL_FROM_NAME=Recyclic (Dev)
EMAIL_FROM_ADDRESS=noreply@recyclic.dev
# kDrive Sync
KDRIVE_WEBDAV_URL=https://kdrive.example.com/remote.php/webdav
KDRIVE_WEBDAV_USERNAME=your_kdrive_username
KDRIVE_WEBDAV_PASSWORD=your_kdrive_app_password
KDRIVE_REMOTE_BASE_PATH=/Recyclic/exports
KDRIVE_SYNC_ENABLED=false
KDRIVE_SYNC_INTERVAL_SECONDS=3600
KDRIVE_RETRY_DELAY_SECONDS=5
KDRIVE_MAX_RETRIES=3
# Cash session reports
CASH_SESSION_REPORT_DIR=/app/reports/cash_sessions
CASH_SESSION_REPORT_RECIPIENT=finance-team@example.com
# Cash session reports tokens
CASH_SESSION_REPORT_TOKEN_TTL_SECONDS=900
CASH_SESSION_REPORT_RETENTION_DAYS=30

# Backup Configuration
BACKUP_REMOTE_HOST=
BACKUP_REMOTE_USER=
BACKUP_REMOTE_PATH=/backups/recyclic
BACKUP_RETENTION_DAYS=7
NOTIFICATION_EMAIL=
NOTIFICATION_TELEGRAM_TOKEN=
NOTIFICATION_TELEGRAM_CHAT_ID=

# First Super Admin bootstrap (création automatique au démarrage si défini)
FIRST_SUPER_ADMIN_USERNAME=admin
FIRST_SUPER_ADMIN_PASSWORD=changeme

